

// FORMS

.input
.select
	background-color white
	font-size 15px
	height 45px
	width 100%
	padding-left 35px
	background #fff
	box-shadow inset 0 1px 1px rgba(124,124,127,0.1), 0 1px 0 rgba(255,255,255,0.7), 0 0 4px rgba(86,149,219,0)
	border: 1px solid #cececf;
	letter-spacing: 0.35px;
	padding: 0 5px 1px 28px
	font-family: "Helvetica Neue", "Helvetica", Arial, sans-serif;

.input-wrapper
	display flex
	align-items center
	position: relative;

.icon
	margin-top 4px
	position absolute

.input-container
	border-bottom solid 1px gray-light-dark
	width 100%
	display flex
	align-items center

	&-input
		flex 1
		height 44px

.input-container-input
	i
		position: absolute;
		top: 12px;
		z-index: 2;
		font-size: 16px;
		right: 15px;

//TITLE
.form-title
	cursor: pointer;
	font-size: 17px;
	padding-left: 10px;
	padding-bottom: 10px;
	padding-top: 10px;

//BUYER - RADIO

.buyer-type
	margin-top: 8px;
	margin-bottom: 8px;
	padding-left: 10px;
	padding-right: 10px;
	display: flex;
	p
		font-size: 13px !important;

.buyer-type-option

	&-first
		flex: 1;
		border: none;
		padding: 0;
		box-shadow: none;
		min-height: 30px;
		display: flex;
		align-items: center;
	&-checkbox
		background-image: url("../img/radios.png");
		background-size: 18px 57px;
		background-position: 0 0;
		width: 18px;
		height: 19px;
		position relative
		transform: scale(0.9);
		cursor: pointer;
		&.checked
			background-position: 0 -19px;
			&.radio
				background-position: 0 -37px;
			.tick
				display block
		.tick
			display none
			background: url("../img/radios.png") no-repeat;
			background-size: 100% 100%;
			width: 16px;
			height: 17px;
			position: absolute;
			left: 3px;
			bottom: 3px;
	&-text
		text-transform capitalize
		color #5b5b65
		text-shadow: 0 1px 0 #fff;
		padding-left: 4px;
